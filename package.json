{
	"name": "mc-parts",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "bun run --filter '*' dev",
		"build": "bun run --filter '*' build",
		"check-types": "bun run --filter '*' check-types",
		"dev:native": "bun run --filter native dev",
		"dev:web": "bun run --filter web dev",
		"dev:server": "bun run --filter server dev",
		"db:push": "bun run --filter server db:push",
		"db:studio": "bun run --filter server db:studio",
		"db:generate": "bun run --filter server db:generate",
		"db:migrate": "bun run --filter server db:migrate",
		"ny:introspect": "bun run scripts/nyehandel/introspect.ts",
		"gen:nye:types": "openapi-typescript .cursor/docs/nyehandel/nyehandel.openapi.json -o src/integrations/nyehandel/generated/nyehandel.types.ts",
		"gen:nye:zod": "openapi-zod-client .cursor/docs/nyehandel/nyehandel.openapi.json -o src/integrations/nyehandel/generated/nyehandel.zod.ts",
		"gen:nye": "bun run gen:nye:types && bun run gen:nye:zod"
	},
	"dependencies": {
		"@dqbd/tiktoken": "^1.0.22",
		"openai": "^6.5.0",
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"openapi-typescript": "^7.9.1",
		"openapi-zod-client": "^1.18.3",
		"shadcn": "^3.2.1",
		"typescript": "^5.3.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc,css,md,mdx}": [
			"biome check --write"
		]
	},
	"packageManager": "bun@1.1.43"
}
